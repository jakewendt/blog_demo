<% form_tag password_path, :id => 'reset_password', :method => :put do %>
  <%= hidden_field_tag :id, params[:id] %>
  Password:<br />
  <%= password_field_tag :password, '', :class => 'text' %><br />
  Confirm Password:<br />
  <%= password_field_tag :password_confirmation, '', :class => 'text' %><br />
  <%= submit_tag "Reset Your Password" %>
<% end %>
<script type='text/javascript'>
  document.getElementById('password').focus()
</script>
