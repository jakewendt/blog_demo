<h1>Editing comment</h1>

<%= error_messages_for :comment %>

<% form_for @comment, :url => post_comment_path(@comment.post), :method => :put do |f| %>
  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p> <%= f.submit "Update" %> </p>
<% end %>

<script type='text/javascript'>
  document.getElementById('comment_body').focus()
</script>
