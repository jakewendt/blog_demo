<% form_tag user_account_path(current_user), :method => :put, :id => 'change_password' do %>
  <p><label for="old_password" class="block">Old Password</label><br />
  <%= password_field_tag 'old_password', @old_password, :class => 'text' %></p>

  <p><label for="password" class="block">New Password</label><br />
  <%= password_field_tag 'password', {}, :class => 'text' %><br />
  <small>Between 4 and 40 characters</small></p>

  <p><label for="password_confirmation"  class="block">Confirm new password</label><br />
  <%= password_field_tag 'password_confirmation', {}, :class => 'text' %></p>

  <%= submit_tag 'Change password' %>

<% end %>
<script type='text/javascript'>
  document.getElementById('old_password').focus()
</script>
