<%= error_messages_for :page %>

<% form_for(@page) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title, :class => 'text' %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p> <%= f.submit "Create" %> </p>
<% end %>

<script type='text/javascript'>
  document.getElementById('page_title').focus();
</script>
